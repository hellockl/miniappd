/* page/mineNews/mineNews.wxss */
.new_list{
  width:100%;
  height:190rpx;
  background: #fff;
  position: relative;
  border-bottom: 1px solid #f0eff5
}
.pic{
  width:100rpx;
  height:100rpx;
  position: absolute;
  top:17%;
  left:3%
}
.right{
  width:80%;
  height:190rpx;
  position: absolute;
  right: 5%;
}
.top{
  width:100%;
  margin-top: 10rpx;
}
.first{
  display: inline-block;
  width: 40%;
  height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  position: relative
}
.second{
  float: right;
  font-size: 25rpx;
  margin-top: 18rpx;
  padding-right: 10rpx
}
.bot{
  width:100%;
  height: 80rpx;
  font-size: 25rpx;
  padding-left: 33rpx;
  color:#888888;
}
.radio{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  background: red;
  border-radius: 50%;
  position: absolute;
  top:20%;
  right:5%;
}