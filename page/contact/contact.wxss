.contactPage{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.name{
  width: 100%;
  height: 100rpx;
  position: relative
}
 .content{
  width: 85%;
  height: 70rpx;
  position: absolute;
  top:15%;
  left:6%;
  border-bottom: 1px solid #f0eff5;
  font-size: 35rpx
} 
.phone{
  width: 100%;
  height: 150rpx;
}
.code{
  width: 100%;
  height: 150rpx;
  background: pink
}
.input{
  width:70%;
  height: 50rpx;
  float: right;
  margin-top: 4rpx;
  margin-left:10px;
  font-size: 30rpx;
}
.send{
  width: 26%;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  position: absolute;
  right:10%;
  top: 14%;
  border-radius: 10rpx;
  border: 1px solid #3392ff;
  font-size: 30rpx;
  color: #3392ff
}
.submit{
  width: 80%;
  height: 80rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 10%;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background: linear-gradient(to right, #7887ff , #2990ff)
}
