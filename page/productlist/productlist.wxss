/* page/productlsit/productlist.wxss */
.editview{
  margin: 20rpx;
  clear: both;
}
.btn_card1{
  font-size:10pt;
  color: #1AAD19;
  width: 90pt;
  background: #fff;
  float: left;
  margin-left: 3%;
  border-color: #1AAD19;
}

.btn_card2{
  font-size:10pt;
  color: #1AAD19;
  width: 90pt;
  background: #fff;
  float: right;
  margin-right: 3%;
  border-color: #1AAD19;
}

button[type="primary"][plain] {
  color:#03a5ef;
  border:1px solid #03a5ef;
  width: 90pt;
  background-color:transparent;
  margin-bottom:14rpx 

}
.product_list{
  clear: both;
  margin-top:0.6rem; 
  background-color: #fff;
  height: 100%;
}
.p_header_title{
  text-align: center;
}
.product_item{
  width: 90%;
  height: 235rpx;
  margin: 2rpx auto 14rpx;
  
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 4px 4px 20px 8px #f0eff5;
}
.item_top{
  width:100%;
  height:70rpx;
  position: relative
}
.item-center{
  font-size: 28rpx;
  padding-left:34rpx; 
  color: #888888
}
.p_title{
  font-size:13px;
  color:#fff;
  text-align: center;
  border-radius: 3px;
  float: left;
  width: 22%;
  height: 38rpx;
  line-height: 35rpx;
  background: #f86965;
  position:absolute;
  top:10px;
  left:-2%;
}
.dian{
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top:35%;
  left:5%
}
.p_star{
  width: 27%;
  height:55rpx;
  position: absolute;
  line-height: 55rpx;
  text-align: center;
  top:10%;
  left:28%;
}
.star-img{
  width: 15px;
  height: 15px;
}
.item_footer{
  clear: both;
  width:100%;
  height:100rpx;
  margin-top:15rpx;
}
.p_tag{
  width: 43%;
  height:55rpx;
  font-size: 20rpx;
  position: absolute;
  top:10%;
  right:1%
}
.content{
  float: left;
  width:30%;
  height:40rpx;
  line-height: 40rpx;
  margin-left: 4rpx;
  margin-top:10rpx;
  border-radius: 5rpx;
  border:1rpx solid #f86965;
  color:#f86965;
  text-align: center;
}
.fybl{
  float: left;
  width: 30%;
  font-size: 30rpx;
  text-align: center;
}
.percent{
  width:80%;
  height:60rpx;
  line-height: 60rpx;
  font-size: 48rpx;
  text-align: center;
}
.back{
  width:80%;
  height:40rpx;
  text-align: center;
  font-size:25rpx;
  margin-top:-5rpx;
}
.lvli{
  float: left;
  width: 30%;
  font-size: 25rpx;
  position: relative
}
.percent1{
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  text-align: center;
  color:#888888;
}
.year{
  width:80%;
  height:40rpx;
  text-align: center;
  font-size:28rpx;
  margin-top:-5rpx;
  color:#888888;
}
.edu{
  float: left;
  width: 20%;
  font-size: 25rpx;
}
.qixian{
  float: left;
  width: 20%;
  font-size: 25rpx;
}
